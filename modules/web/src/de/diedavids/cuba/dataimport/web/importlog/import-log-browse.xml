<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="importLogsTable"
        messagesPack="de.diedavids.cuba.dataimport.web.importlog">
    <data readOnly="true">
        <collection id="importLogsDc"
                    class="de.diedavids.cuba.dataimport.entity.ImportLog"
                    view="importLog-view">
            <loader id="importLogsDl">
                <query>
                    <![CDATA[select e from ddcdi$ImportLog e]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="importLogsTable"
            spacing="true">
        <filter id="filter"
                applyTo="importLogsTable"
                dataLoader="importLogsDl">
            <properties include=".*"/>
        </filter>
        <groupTable id="importLogsTable"
                    width="100%"
                    dataContainer="importLogsDc">
            <actions>
                <action id="create" type="create"/>
                <action id="edit" type="edit"/>
                <action id="remove" type="remove"/>
            </actions>
            <columns>
                <column id="startedAt"/>
                <column id="finishedAt"/>
                <column id="entitiesProcessed"/>
                <column id="entitiesImportSuccess"/>
                <column id="success"/>
                <column id="configuration" link="true"/>
                <column id="file" link="true" linkInvoke="downloadFile"/>
            </columns>
            <rowsCount/>
            <buttonsPanel id="buttonsPanel"
                          alwaysVisible="true">
                <button id="createBtn" action="importLogsTable.create"/>
                <button id="editBtn" action="importLogsTable.edit"/>
                <button id="removeBtn" action="importLogsTable.remove"/>
            </buttonsPanel>
        </groupTable>
        <hbox id="lookupActions" spacing="true" visible="false">
            <button action="lookupSelectAction"/>
            <button action="lookupCancelAction"/>
        </hbox>
    </layout>
</window>
