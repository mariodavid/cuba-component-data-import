<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://editorCaption"
        focusComponent="form"
        messagesPack="de.diedavids.cuba.dataimport.web.importlog">
    <data>
        <instance id="importLogDc"
                  class="de.diedavids.cuba.dataimport.entity.ImportLog"
                  view="importLog-with-records-view">
            <loader/>
            <collection id="recordsDc" property="records"/>
        </instance>
        <collection id="importLogRecordsDc"
                    class="de.diedavids.cuba.dataimport.entity.ImportLogRecord"
                    view="_local">
            <loader id="importLogRecordsDl">
                <query>
                    <![CDATA[select e from ddcdi$ImportLogRecord e where e.importLog = :importLog]]>
                </query>
            </loader>
        </collection>
    </data>
    <dialogMode height="600"
                width="800"/>
    <layout expand="contentTabSheet" spacing="true">
        <tabSheet id="contentTabSheet">
            <tab id="overviewTab"
                 caption="msg://overview"
                 margin="true,false,false,false">
                <form id="form" editable="false" dataContainer="importLogDc">
                    <column width="250px">
                        <pickerField id="configurationField" property="configuration">
                            <actions>
                                <action id="open" type="picker_open"/>
                            </actions>
                        </pickerField>
                        <upload id="fileField" fileStoragePutMode="IMMEDIATE" property="file" showFileName="true"/>
                        <checkBox id="successField" property="success"/>
                        <dateField id="startedAtField" property="startedAt"/>
                        <dateField id="finishedAtField" property="finishedAt"/>
                    </column>
                    <column width="250px">
                        <textField id="entitiesProcessedField" property="entitiesProcessed"/>
                        <textField id="entitiesImportSuccessField" property="entitiesImportSuccess"/>
                        <textField id="entitiesImportValidationErrorField" property="entitiesImportValidationError"/>
                        <textField id="entitiesPreCommitSkippedField" property="entitiesPreCommitSkipped"/>
                        <textField id="entitiesUniqueConstraintSkippedField" property="entitiesUniqueConstraintSkipped"/>
                    </column>
                </form>
            </tab>
            <tab id="recordsTab"
            caption="msg://de.diedavids.cuba.dataimport.entity.ImportLog/ImportLog.records"
                 margin="true,false,false,false" expand="recordsTable" spacing="true">
                <filter id="filter"
                        applyTo="recordsTable"
                        dataLoader="importLogRecordsDl">
                    <properties include=".*"/>
                </filter>
                <groupTable id="recordsTable" dataContainer="importLogRecordsDc" width="100%" height="100%">
                    <actions>
                        <action id="edit" type="edit"/>
                    </actions>
                    <columns>
                        <column id="time"/>
                        <column id="level"/>
                        <column id="category"/>
                        <column id="dataRowIndex"/>
                    </columns>
                    <buttonsPanel>
                        <button action="recordsTable.edit"/>
                    </buttonsPanel>
                </groupTable>
            </tab>
        </tabSheet>
        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
</window>
